{
  "swagger": "2.0",
  "info": {
    "title": "Academy Project",
    "description": "API Documentation for Academy Management System",
    "version": "1.0.0"
  },
  "host": "localhost:3025",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/admin/add_student": {
      "post": {
        "description": "Add a new student to the academy",
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "name",
            "in": "formData",
            "type": "string",
            "required": true,
            "description": "Student name"
          },
          {
            "name": "phone",
            "in": "formData",
            "type": "string",
            "required": true,
            "description": "Student phone number (format: 0933123456 or 963933123456)"
          },
          {
            "name": "registration_system",
            "in": "formData",
            "type": "string",
            "required": true,
            "enum": ["نظام صفي", "نظام مواد"],
            "description": "Registration system type"
          },
          {
            "name": "class_id",
            "in": "formData",
            "type": "integer",
            "required": true,
            "description": "Class ID"
          },
          {
            "name": "year",
            "in": "formData",
            "type": "string",
            "required": true,
            "description": "Academic year"
          },
          {
            "name": "subjectIds",
            "in": "formData",
            "type": "array",
            "items": {
              "type": "integer"
            },
            "required": false,
            "description": "Array of subject IDs (required if registration_system is 'نظام مواد')"
          },
          {
            "name": "photo",
            "in": "formData",
            "type": "file",
            "required": false,
            "description": "Student photo"
          }
        ],
        "responses": {
          "201": {
            "description": "Student created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "message": { "type": "string" },
                "طالب": { "type": "object" },
                "code": { "type": "string" },
                "ينتهي_في": { "type": "string" },
                "enrollmentSubjects": { "type": "integer" }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid phone number or duplicate name"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/admin/all_students": {
      "get": {
        "description": "Get all students with optional filters and pagination",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 1,
            "description": "Page number"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 10,
            "description": "Number of items per page"
          },
          {
            "name": "classId",
            "in": "query",
            "type": "integer",
            "required": false,
            "description": "Filter by class ID"
          },
          {
            "name": "year",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Filter by year"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "page": { "type": "integer" },
                "limit": { "type": "integer" },
                "total": { "type": "integer" },
                "pages": { "type": "integer" },
                "students": { "type": "array" }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/admin/one_student/{student_id}": {
      "get": {
        "description": "Get a specific student by ID with their subjects",
